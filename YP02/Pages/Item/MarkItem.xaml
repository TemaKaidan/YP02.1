<UserControl x:Class="YP02.Pages.Item.MarkItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YP02.Pages.Item"
             mc:Ignorable="d">
    <Border CornerRadius="10" Background="White" Margin="10" BorderBrush="#0060AC" BorderThickness="1">
        <Grid Margin="10,5,10,5">
            <Grid.Resources>
                <ResourceDictionary Source="/Resource/BtnRes.xaml"/>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel VerticalAlignment="Center">
                <Label x:Name="lb_studentId" Content="Студент: " Height="30" FontSize="15"/>
                <Label x:Name="lb_disciplineProgramId" Content="Программа дисциплина: " Height="30" FontSize="15"/>
                <Label x:Name="lb_mark" Content="Оценка: " Height="30" FontSize="15"/>
                <Label x:Name="lb_description" Content="Описание: " Height="30" FontSize="15"/>
            </StackPanel>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                <Button Style="{StaticResource BtnRedac}" Click="Click_Edit" Content="Изменить" Height="30" Width="100" FontSize="13" Margin="10,10,10,5" Background="#0060AC" Foreground="White"/>
                <Button Style="{StaticResource BtnRedac}" Click="Click_Delete" Content="Удалить" Height="30" Width="100" FontSize="13" Margin="10,5,10,10" Background="#FFD24B4B" Foreground="White"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
