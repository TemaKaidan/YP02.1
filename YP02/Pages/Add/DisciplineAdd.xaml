<Page x:Class="YP02.Pages.Add.DisciplineAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YP02.Pages.Add"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DisciplineAdd">

    <Grid>
        <DockPanel>
            <!-- Боковое меню -->
            <StackPanel x:Name="MenuPanel" DockPanel.Dock="Left" Width="200">
                <StackPanel.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0060AC" Offset="0"/>
                        <GradientStop Color="#E41613" Offset="1.2"/>
                    </LinearGradientBrush>
                </StackPanel.Background>

                <Button Content="☰" Click="ToggleMenu" Foreground="White" HorizontalAlignment="Left" BorderBrush="Transparent" Width="50" Height="30" Background="Transparent">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7F9EA1A2"/>
                                    <!-- Затемнение фона при наведении -->
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Label Background="White" Height="1"/>
                <Button Content="Назад" Click="CancelButton_Click"
                        Foreground="White" FontWeight="Bold" FontSize="14" Background="Transparent" BorderBrush="Transparent"
                        Margin="5" Height="30"/>
            </StackPanel>

            <!-- Основное содержимое -->
            <Grid Background="#f0f2f0">
                <Grid.Resources>
                    <ResourceDictionary Source="/Resource/BtnRes.xaml"/>
                </Grid.Resources>

                <Grid VerticalAlignment="Top" Height="55" Margin="5">
                    <Border CornerRadius="15,15,15,15" Margin="0,0,0,0">
                        <Border.Background>
                            <SolidColorBrush Color="#0060AC" Opacity="1.0"/>
                        </Border.Background>
                    </Border>
                    <Label Content="Добавление информации о дисциплинах" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="White" FontSize="20"/>
                </Grid>

                <Grid Margin="0,60,0,0">
                    <Label Content="Название дисциплины" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" FontSize="20" Margin="0,18,0,0" Width="234"/>
                    <TextBox Style="{StaticResource BaseBox}" x:Name="tb_nameDiscipline" Background="White" BorderBrush="#0060AC" Foreground="Black"  VerticalAlignment="Top" Margin="10,60,0,0" Height="30" HorizontalAlignment="Center" Width="250"/>
                </Grid>

                <Grid VerticalAlignment="Bottom" MinHeight="50">
                    <Button Style="{StaticResource BtnRedac}" Background="#FFD24B4B" x:Name="text2" Click="Add_Discipline" Content="Добавить" Width="120" Height="40" HorizontalAlignment="Right" Margin="0,10,15,15"/>
                </Grid>
            </Grid>
        </DockPanel>
    </Grid>

</Page>
